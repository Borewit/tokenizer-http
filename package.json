{
  "name": "@tokenizer/http",
  "version": "0.4.0",
  "description": "HTTP tokenizer for Node.js and browser",
  "main": "lib/http-tokenizer",
  "typings": "lib/http-tokenizer",
  "files": [
    "lib/**/*.js",
    "lib/**/*.d.ts"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Borewit/tokenizer-http.git"
  },
  "author": {
    "name": "Borewit",
    "url": "https://github.com/Borewit"
  },
  "keywords": [
    "xhr",
    "http",
    "sttok3",
    "RFC-7233",
    "range",
    "chunk",
    "https",
    "client",
    "meta",
    "metadata",
    "audio",
    "media",
    "tags"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Borewit/tokenizer-http/issues"
  },
  "scripts": {
    "clean": "del-cli lib/**/*.js lib/**/*.js.map lib/**/*.d.ts test/**/*.js test/**/*.js.map coverage",
    "compile-lib": "tsc -p lib/tsconfig.json",
    "compile-test": "tsc -p lib/tsconfig.spec.json",
    "compile": "npm run compile-lib && yarn run compile-test",
    "prepublishOnly": "yarn run build",
    "build": "npm run clean && yarn run compile",
    "lint": "tslint 'lib/**/*.ts' --exclude 'lib/**/*.d.ts' 'test/**/*.ts' --exclude 'test/**/*.d.ts'",
    "karma": "karma start",
    "test": "npm run karma-once",
    "test-node": "cd node && yarn install && yarn test",
    "karma-once": "karma start --browsers Chrome --single-run",
    "travis-karma": "karma start --browsers Firefox --single-run",
    "post-coveralls": "coveralls < coverage/lcov.info"
  },
  "devDependencies": {
    "@types/jasmine": "^3.4.4",
    "@types/node": "^12.12.7",
    "coveralls": "^3.0.7",
    "del-cli": "^3.0.0",
    "istanbul-instrumenter-loader": "^3.0.1",
    "jasmine-core": "^3.5.0",
    "karma": "^4.4.1",
    "karma-chrome-launcher": "^3.1.0",
    "karma-coverage-istanbul-reporter": "^2.1.0",
    "karma-firefox-launcher": "^1.2.0",
    "karma-jasmine": "^2.0.1",
    "karma-jasmine-html-reporter": "^1.4.2",
    "karma-spec-reporter": "^0.0.32",
    "karma-webpack": "^4.0.2",
    "music-metadata-browser": "^1.6.1",
    "ts-loader": "^6.2.1",
    "tslint": "^5.20.0",
    "typescript": "^3.7.2",
    "webpack": "^4.41.2"
  },
  "dependencies": {
    "@tokenizer/range": "^0.1.0",
    "debug": "^4.1.1",
    "node-fetch": "^2.6.0",
    "strtok3": "^3.1.2"
  }
}
